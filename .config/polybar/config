[module/clock]
type = internal/date
format = <label>
interval = 1
date = %Y-%m-%d%
time = %H:%M
date-alt = %a %d %b
time-alt = %H:%M:%S
label = %date% %time%%{A}%{A}

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true

label-volume  = %{A3:pavucontrol & disown:}%percentage:2%%%{A}
format-volume = <ramp-volume> <label-volume>

label-muted = " muted"
ramp-volume-0 = ""
ramp-volume-1 = ""
ramp-volume-2 = ""
ramp-volume-3 = ""

[module/battery]
